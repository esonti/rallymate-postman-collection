{
    "info": {
        "_postman_id": "cameras-rest-collection-corrected",
        "name": "RallyMate Cameras REST API (Corrected)",
        "description": "Camera Management API - Correct URLs and request bodies matching actual HTTP handlers",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "_exporter_id": "rallymate-cameras-corrected"
    },
    "item": [
        {
            "name": "Camera Management",
            "item": [
                {
                    "name": "Register Camera",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 201\", function () {",
                                    "    pm.response.to.have.status(201);",
                                    "});",
                                    "",
                                    "pm.test(\"Response has camera object\", function () {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.have.property('camera');",
                                    "    pm.expect(jsonData.camera).to.have.property('device_id');",
                                    "    pm.expect(jsonData.camera).to.have.property('facility_id');",
                                    "});",
                                    "",
                                    "// Store camera device_id for subsequent requests",
                                    "if (pm.response.code === 201) {",
                                    "    var response = pm.response.json();",
                                    "    pm.environment.set('camera_device_id', response.camera.device_id);",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{session_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"facility_id\": {{test_facility_id}},\n    \"device_id\": \"camera-{{$randomAlphaNumeric}}\",\n    \"name\": \"Court Camera 1\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/cameras/register",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "cameras",
                                "register"
                            ]
                        }
                    }
                },
                {
                    "name": "Update Camera",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 200\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test(\"Response has updated camera\", function () {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.have.property('camera');",
                                    "});"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{session_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"facility_id\": {{test_facility_id}},\n    \"device_id\": \"{{camera_device_id}}\",\n    \"name\": \"Updated Court Camera 1\",\n    \"stream_url\": \"rtsp://192.168.1.50:554/stream1\",\n    \"firmware_version\": \"2.1.0\",\n    \"edge_connectivity\": 1\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/cameras/{{camera_device_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "cameras",
                                "{{camera_device_id}}"
                            ]
                        }
                    }
                },
                {
                    "name": "Unregister Camera",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 200\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test(\"Response indicates success\", function () {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.have.property('success', true);",
                                    "});"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{session_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"facility_id\": {{test_facility_id}},\n    \"device_id\": \"{{camera_device_id}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/cameras/{{camera_device_id}}/unregister",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "cameras",
                                "{{camera_device_id}}",
                                "unregister"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Cameras",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 200\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test(\"Response has cameras array\", function () {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.have.property('cameras');",
                                    "    pm.expect(jsonData.cameras).to.be.an('array');",
                                    "});"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{session_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/cameras?facility_id={{test_facility_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "cameras"
                            ],
                            "query": [
                                {
                                    "key": "facility_id",
                                    "value": "{{test_facility_id}}"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Camera Control",
            "item": [
                {
                    "name": "Camera Control",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 200\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test(\"Response indicates success\", function () {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.have.property('success', true);",
                                    "});"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{session_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"facility_id\": {{test_facility_id}},\n    \"device_id\": \"{{camera_device_id}}\",\n    \"action\": 1\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/cameras/{{camera_device_id}}/control",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "cameras",
                                "{{camera_device_id}}",
                                "control"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Camera Activities",
            "item": [
                {
                    "name": "Get Camera Activities",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 200\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test(\"Response has activities array\", function () {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.have.property('activities');",
                                    "    pm.expect(jsonData.activities).to.be.an('array');",
                                    "});"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{session_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/cameras/activities?facility_id={{test_facility_id}}&device_id={{camera_device_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "cameras",
                                "activities"
                            ],
                            "query": [
                                {
                                    "key": "facility_id",
                                    "value": "{{test_facility_id}}"
                                },
                                {
                                    "key": "device_id",
                                    "value": "{{camera_device_id}}"
                                }
                            ]
                        }
                    }
                }
            ]
        }
    ],
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{session_token}}",
                "type": "string"
            }
        ]
    },
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "if (!pm.environment.get('test_facility_id')) {",
                    "    pm.environment.set('test_facility_id', '1');",
                    "}",
                    "",
                    "if (!pm.environment.get('camera_device_id')) {",
                    "    pm.environment.set('camera_device_id', 'camera-test-001');",
                    "}"
                ]
            }
        }
    ]
}