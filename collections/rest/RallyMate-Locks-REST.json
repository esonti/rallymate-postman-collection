{
    "info": {
        "_postman_id": "locks-rest-collection-corrected",
        "name": "RallyMate Locks REST API (Corrected)",
        "description": "Smart Lock Management API - Correct URLs and request bodies matching actual HTTP handlers",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "_exporter_id": "rallymate-locks-corrected"
    },
    "item": [
        {
            "name": "Lock Management",
            "item": [
                {
                    "name": "Register Lock",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 201\", function () {",
                                    "    pm.response.to.have.status(201);",
                                    "});",
                                    "",
                                    "pm.test(\"Response has lock object\", function () {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.have.property('lock');",
                                    "    pm.expect(jsonData.lock).to.have.property('device_id');",
                                    "    pm.expect(jsonData.lock).to.have.property('facility_id');",
                                    "});",
                                    "",
                                    "// Store lock device_id for subsequent requests",
                                    "if (pm.response.code === 201) {",
                                    "    var response = pm.response.json();",
                                    "    pm.environment.set('lock_device_id', response.lock.device_id);",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{session_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"facility_id\": {{test_facility_id}},\n    \"device_id\": \"lock-{{$randomAlphaNumeric}}\",\n    \"name\": \"Main Entrance Lock\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/locks/register",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "locks",
                                "register"
                            ]
                        }
                    }
                },
                {
                    "name": "Update Lock",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 200\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test(\"Response has updated lock\", function () {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.have.property('lock');",
                                    "});"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{session_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"facility_id\": {{test_facility_id}},\n    \"device_id\": \"{{lock_device_id}}\",\n    \"name\": \"Updated Main Entrance Lock\",\n    \"firmware_version\": \"3.2.2\",\n    \"edge_connectivity\": 1,\n    \"state\": 1\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/locks/{{lock_device_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "locks",
                                "{{lock_device_id}}"
                            ]
                        }
                    }
                },
                {
                    "name": "Unregister Lock",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 200\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test(\"Response indicates success\", function () {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.have.property('success', true);",
                                    "});"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{session_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"facility_id\": {{test_facility_id}},\n    \"device_id\": \"{{lock_device_id}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/locks/{{lock_device_id}}/unregister",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "locks",
                                "{{lock_device_id}}",
                                "unregister"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Locks",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 200\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test(\"Response has locks array\", function () {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.have.property('locks');",
                                    "    pm.expect(jsonData.locks).to.be.an('array');",
                                    "});"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{session_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/locks?facility_id={{test_facility_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "locks"
                            ],
                            "query": [
                                {
                                    "key": "facility_id",
                                    "value": "{{test_facility_id}}"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Lock Control",
            "item": [
                {
                    "name": "Lock Control",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 200\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test(\"Response indicates success\", function () {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.have.property('success', true);",
                                    "});"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{session_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"facility_id\": {{test_facility_id}},\n    \"device_id\": \"{{lock_device_id}}\",\n    \"action\": 2\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/locks/{{lock_device_id}}/control",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "locks",
                                "{{lock_device_id}}",
                                "control"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Lock Activities",
            "item": [
                {
                    "name": "Get Lock Activities",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 200\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test(\"Response has activities array\", function () {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.have.property('activities');",
                                    "    pm.expect(jsonData.activities).to.be.an('array');",
                                    "});"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{session_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/locks/activities?facility_id={{test_facility_id}}&device_id={{lock_device_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "locks",
                                "activities"
                            ],
                            "query": [
                                {
                                    "key": "facility_id",
                                    "value": "{{test_facility_id}}"
                                },
                                {
                                    "key": "device_id",
                                    "value": "{{lock_device_id}}"
                                }
                            ]
                        }
                    }
                }
            ]
        }
    ],
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{session_token}}",
                "type": "string"
            }
        ]
    },
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "if (!pm.environment.get('test_facility_id')) {",
                    "    pm.environment.set('test_facility_id', '1');",
                    "}",
                    "",
                    "if (!pm.environment.get('lock_device_id')) {",
                    "    pm.environment.set('lock_device_id', 'lock-test-001');",
                    "}"
                ]
            }
        }
    ]
}